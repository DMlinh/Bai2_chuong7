package com.example.bai2;

import android.content.Intent;
import android.os.Bundle;
import android.widget.Button;
import android.widget.TextView;
import androidx.appcompat.app.AppCompatActivity;

public class StringAndIntActivity extends AppCompatActivity {

    Button btnBackToMain;
    TextView tvGetString, tvGetInt;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.get_string_int);

        btnBackToMain = findViewById(R.id.btnBacktoMain3);
        tvGetString = findViewById(R.id.getstring2);
        tvGetInt = findViewById(R.id.getint2);

        // Nhận dữ liệu
        String name = getIntent().getStringExtra("name");
        int number = getIntent().getIntExtra("number", 0);

        // Hiển thị
        tvGetString.setText(name);
        tvGetInt.setText(number);

        // Nút quay lại
        btnBackToMain.setOnClickListener(v ->
                startActivity(new Intent(StringAndIntActivity.this, MainActivity.class)));
    }
}
